<li class="cmtItem" id=comment_<%=comment.id%>>
    <span class="cmtEmail bold"><%= comment.user_email %></span><br>
<% if !comment.font_name.blank? %> 
    <div class="cmtFont bold"><%=comment.font_name%></div>
<%end%> 
<div class="cmtContent">
<%= comment.comment %>
</div>
<div class="btnSmall">
<%if can? :update, comment%>
<%=link_to '삭제',comment_path(comment),method: :delete ,remote: true, data: { confirm: '정말 지울건가요?' }%>
<%=link_to '수정',edit_comment_path(comment),method: :get, remote: true%>
<%end%>
<% if can? :update, post%>
<%=link_to '채택',post_comment_best_path(post,comment), method: :post,data: { confirm: '찾으시던 폰트가 맞나요?' }%>
<%end%>
</div>
</li>
