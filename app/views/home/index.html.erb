                        <g id="Oval-3" transform="translate(950.000000, 95.000000) rotate(-315.000000) translate(-950.000000, -95.000000) translate(924.000000, 76.000000)">
                            <path d="M19,38 C8.50658975,38 0,29.4934102 0,19 C0,8.50658975 8.50658975,0 19,0 C29.4934102,0 38,8.50658975 38,19 C38,29.4934102 29.4934102,38 19,38 Z M19,34 C27.2842712,34 34,27.2842712 34,19 C34,10.7157288 27.2842712,4 19,4 C10.7157288,4 4,10.7157288 4,19 C4,27.2842712 10.7157288,34 19,34 Z" fill-rule="nonzero"></path>
